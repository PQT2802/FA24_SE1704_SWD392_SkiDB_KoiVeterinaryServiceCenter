@page
@model KoiVeterinaryServiceCenter_FE.Pages.User.Veterinarian.CreateMyQualificationModel
@{
    Layout = "_layoutBoard";
}
@{
    ViewData["Title"] = "Create Veterinarian";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="container mt-5">
    <form method="post">
        <div class="mb-3">
            <label for="LicenseNumber" class="form-label">License Number</label>
            <input type="text" id="LicenseNumber" class="form-control" asp-for="Veterinarian.LicenseNumber" placeholder="Enter License Number" />
            <small class="form-text text-muted">Enter your veterinarian license number (e.g., AB123456).</small>
            <span asp-validation-for="Veterinarian.LicenseNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Specialty" class="form-label">Specialty</label>
            <input type="text" id="Specialty" class="form-control" asp-for="Veterinarian.Specialty" placeholder="Enter Specialty" />
            <small class="form-text text-muted">Specify your area of expertise (e.g., surgery, dermatology).</small>
            <span asp-validation-for="Veterinarian.Specialty" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Qualifications" class="form-label">Qualifications</label>
            <input type="text" id="Qualifications" class="form-control" asp-for="Veterinarian.Qualifications" placeholder="Enter Qualifications" />
            <small class="form-text text-muted">List your professional qualifications (e.g., degree, certification).</small>
            <span asp-validation-for="Veterinarian.Qualifications" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>


    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3">
            @Model.ErrorMessage
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
