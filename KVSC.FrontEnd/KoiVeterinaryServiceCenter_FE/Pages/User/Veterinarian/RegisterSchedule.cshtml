@page
@model KoiVeterinaryServiceCenter_FE.Pages.User.Veterinarian.RegisterScheduleModel
@{
}
@{
    ViewData["Title"] = "Đăng ký lịch trình";
}

<h2 class="text-center mt-4">Đăng ký lịch trình</h2>

<div class="container mt-5">
    <form method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="date" class="form-label">Ngày làm việc</label>
            <input type="datetime-local" id="date" name="Date" class="form-control" required />
            <div class="invalid-feedback">Vui lòng chọn ngày làm việc.</div>
        </div>

        <div class="mb-3">
            <label for="startTime" class="form-label">Thời gian bắt đầu</label>
            <input type="time" id="startTime" name="StartTime" class="form-control" required />
            <div class="invalid-feedback">Vui lòng chọn thời gian bắt đầu.</div>
        </div>

        <div class="mb-3">
            <label for="endTime" class="form-label">Thời gian kết thúc</label>
            <input type="time" id="endTime" name="EndTime" class="form-control" required />
            <div class="invalid-feedback">Vui lòng chọn thời gian kết thúc.</div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
    </form>

    <div class="mt-3">
        <partial name="_Toast" />
    </div>
</div>