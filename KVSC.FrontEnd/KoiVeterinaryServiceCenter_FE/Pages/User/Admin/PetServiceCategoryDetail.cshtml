@page "{id:guid}"
@model KoiVeterinaryServiceCenter_FE.Pages.User.Admin.PetServiceCategoryDetailModel
@{
    Layout = "_LayoutBoard";
}

@{
    ViewData["Title"] = "Pet Service Category Details";
}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center">Pet Service Category Details</h2>
        </div>
        <div class="card-body">
            @if (Model.PetServiceCategory != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="display-4  mb-4">@Model.PetServiceCategory.Extensions.Data.Name</h3>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Description:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetServiceCategory.Extensions.Data.Description</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Service Type:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetServiceCategory.Extensions.Data.ServiceType</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Applicable To:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetServiceCategory.Extensions.Data.ApplicableTo</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Pet service category not found.
                </div>
            }
        </div>
        <div class="card-footer text-end">
            <a href="/User/Admin/ServiceCategory" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>