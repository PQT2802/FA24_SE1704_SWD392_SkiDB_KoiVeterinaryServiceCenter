@page "{id:guid}"
@model KoiVeterinaryServiceCenter_FE.Pages.User.Admin.PetServiceDetailModel
@{
    Layout = "_LayoutBoard";
}

@{
    ViewData["Title"] = "Pet Service Details";
}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center">Pet Service Details</h2>
        </div>
        <div class="card-body">
            @if (Model.PetService != null)
            {
                <div class="row">
                    <div class="col-md-6 d-flex justify-content-center" style="min-height: 600px; max-height: 800px;">
                        <img src="@Model.PetService.Extensions.Data.ImageUrl"
                             alt="Service Image"
                             class="img-fluid rounded shadow"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                    </div>
                    <div class="col-md-6">
                        <h3 class="display-4  mb-4" >@Model.PetService.Extensions.Data.Name</h3>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Base Price:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetService.Extensions.Data.BasePrice.ToString("N0") VND</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Duration:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetService.Extensions.Data.Duration</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Travel Cost:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetService.Extensions.Data.TravelCost.ToString("N0") VND</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Service Category:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">@Model.PetService.Extensions.Data.ServiceCategory</p>
                        </div>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Availability:</strong></p>
                            <p class="bg-light border rounded p-3" style="min-height: 50px;">
                                From @Model.PetService.Extensions.Data.AvailableFrom.ToString("dd/MM/yyyy")
                                to @Model.PetService.Extensions.Data.AvailableTo.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Pet service not found.
                </div>
            }
        </div>
        <div class="card-footer text-end">
            <a href="/User/Admin/Services" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>

