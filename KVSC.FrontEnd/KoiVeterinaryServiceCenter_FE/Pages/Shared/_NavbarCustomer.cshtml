<!-- Navbar Start -->
<div class="container-fluid sticky-top bg-white shadow-sm">
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0">
            <a asp-page="/Index" class="navbar-brand">
                <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-fish me-2"></i>KoiVet</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="/Index" class="nav-item nav-link active">Home</a>
                    <a href="/appointment" class="nav-item nav-link">Book Appointment</a>

                    @{
                        var actorRole = Context.Session.GetString("ActorRole");
                        if (actorRole != null)
                        {
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    @{
                                        var actorAvatar = Context.Session.GetString("ActorAvatar");
                                        if (!string.IsNullOrEmpty(actorAvatar))
                                        {
                                            <img class="rounded-circle" src="@actorAvatar" alt="User Avatar" style="width: 40px; height: 40px;">
                                        }
                                        else
                                        {
                                            <img class="rounded-circle" src="~/img/users.jpg" alt="Default Avatar" style="width: 40px; height: 40px;">
                                        }
                                    }
                                </a>
                                <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0 shadow">
                                    @* Tiêu đề cho menu *@
                                    <h6 class="dropdown-header">User Menu</h6>
                                    @if (actorRole == "Admin")
                                    {
                                        <a href="/User/Admin/AdminProfile" class="dropdown-item">
                                            <i class="fa fa-user-shield me-2"></i>My Profile
                                        </a>
                                        <a href="/User/Admin/DashBoard" class="dropdown-item">
                                            <i class="fa fa-tachometer-alt me-2"></i>Dashboard
                                        </a>
                                    }
                                    else if (actorRole == "Customer")
                                    {
                                        <a href="/User/Customer/CustomerProfile" class="dropdown-item">
                                            <i class="fa fa-user me-2"></i>My Profile
                                        </a>
                                        <a href="/User/Customer/Pet" class="dropdown-item">
                                            <i class="fas fa-fish me-2"></i>My Koi
                                        </a>
                                    }

                                    <div class="dropdown-divider"></div> <!-- Phân cách giữa các mục -->
                                    <a href="/Account/Logout" class="dropdown-item text-danger">
                                        <i class="fa fa-sign-out-alt me-2"></i>Log Out
                                    </a>
                                </div>
                            </div>
                        }
                    }

                   
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->
