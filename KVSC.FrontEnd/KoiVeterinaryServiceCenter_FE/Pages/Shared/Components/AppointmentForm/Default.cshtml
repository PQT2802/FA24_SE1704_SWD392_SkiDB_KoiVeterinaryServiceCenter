<form id="appointmentForm" class="needs-validation" novalidate>
    <!-- Customer ID Input -->
    <div class="mb-4">
        <label for="customerId" class="form-label" style="font-weight: bold; color: #333;">Customer ID</label>
        <input type="text" class="form-control" id="customerId" name="CustomerId" value="@Model.CustomerId" required />
        <div class="invalid-feedback">
            Please enter your Customer ID.
        </div>
    </div>

    <!-- Pet Service Dropdown -->
    <div class="mb-4">
        <label for="petServiceId" class="form-label" style="font-weight: bold; color: #333;">Pet Service</label>
        <select class="form-select" id="petServiceId" name="PetServiceId" required>
            <option value="">Select a service</option>
            @foreach (var service in Model.Services)
            {
                <option value="@service.Id">@service.Name</option>
            }
        </select>
        <div class="invalid-feedback">
            Please select a pet service.
        </div>
    </div>

    <!-- Pet Dropdown (Optional) -->
    <div class="mb-4">
        <label for="petId" class="form-label" style="font-weight: bold; color: #333;">Select Pet (Optional)</label>
        <select class="form-select" id="petId" name="PetId">
            <option value="">Select a pet</option>
            @foreach (var pet in Model.Pets)
            {
                <option value="@pet.Id">@pet.Name</option>
            }
        </select>
    </div>

    <!-- Appointment Date Input -->
    <div class="mb-4">
        <label for="appointmentDate" class="form-label" style="font-weight: bold; color: #333;">Appointment Date</label>
        <input type="datetime-local" class="form-control" id="appointmentDate" name="AppointmentDate" required />
        <div class="invalid-feedback">
            Please choose a valid appointment date and time.
        </div>
    </div>

    <!-- Notes (Optional) -->
    <div class="mb-4">
        <label for="notes" class="form-label" style="font-weight: bold; color: #333;">Notes</label>
        <textarea class="form-control" id="notes" name="Notes" rows="3"></textarea>
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
        <button type="button" id="submitAppointment" class="btn btn-primary btn-lg">Book Appointment</button>
    </div>
</form>

<script>
    document.getElementById("submitAppointment").addEventListener("click", function (e) {
    e.preventDefault();

    const formData = new FormData(document.getElementById("appointmentForm"));

    fetch('/AppointmentForm/SubmitAppointment', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert("Appointment successfully booked!");
            window.location.reload();
        } else {
            alert("Failed to book appointment: " + data.message);
        }
    })
    .catch(error => console.error('Error:', error));
});

</script>

