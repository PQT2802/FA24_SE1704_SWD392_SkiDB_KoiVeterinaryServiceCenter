@page
@using KVSC.Infrastructure.DTOs.User.Register
@model KoiVeterinaryServiceCenter_FE.Pages.Account.SignUpModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/board/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/board/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/board/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/board/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/board/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sign Up Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="/" class="">
                                <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>DASHMIN</h3>
                            </a>
                            <h3>Sign Up</h3>
                        </div>



                        <!-- Loop through SignUpRequest properties and generate form fields -->
                        @{
                            var properties = typeof(SignUpRequest).GetProperties();
                        }

                        <!-- Loop to generate form fields dynamically -->
                        @foreach (var prop in properties)
                        {
                            var fieldErrors = Model.ErrorMessage
                            .Where(e => e.Code.Contains(prop.Name, StringComparison.OrdinalIgnoreCase))
                            .ToList();

                            <div class="form-floating mb-3">
                                <input type="@(prop.PropertyType == typeof(IFormFile) ? "file" : (prop.PropertyType == typeof(DateTime) ? "date" : "text"))"
                                       class="form-control @(fieldErrors.Any() ? "is-invalid" : "")"
                                       id="floating@(prop.Name)"
                                       name="@(prop.Name)"
                                       placeholder="@prop.Name">
                                <label for="floating@(prop.Name)">@prop.Name</label>

                                <!-- Show validation errors under the respective field -->
                                @if (fieldErrors.Any())
                                {
                                    <div class="invalid-feedback">
                                        @foreach (var error in fieldErrors)
                                        {
                                            <span>@error.Description</span>
                                        }
                                    </div>
                                }
                            </div>
                        }

                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                        <p class="text-center mb-0">Already have an Account? <a href="/login">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sign Up End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/board/lib/chart/chart.min.js"></script>
    <script src="~/board/lib/easing/easing.min.js"></script>
    <script src="~/board/lib/waypoints/waypoints.min.js"></script>
    <script src="~/board/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/board/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/board/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/board/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/board/js/main.js"></script>
</body>

</html>