@page "/Veterinarian"
@model KoiVeterinaryServiceCenter_FE.Pages.Veterinarian.VeterinarianModel
@{
}
<!-- Team Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Our Veterinarians</h5>
            <h1 class="display-4">Qualified Healthcare Professionals</h1>
        </div>

        <div class="owl-carousel team-carousel position-relative">
            @if (Model.User.Extensions.Data.Data != null && Model.User.Extensions.Data.Data.Any())
            {
                foreach (var user in Model.User.Extensions.Data.Data)
                {
                    var veterinarian = Model.Veterinarians.Extensions.Data.FirstOrDefault(c => c.UserId == user.Id);
                    
                    if (veterinarian != null)
                    {
                        <div class="team-item">
                            <div class="row g-0 bg-light rounded overflow-hidden">
                                <div class="col-12 col-sm-5 h-100">
                                    <img class="img-fluid h-100" src="@user.ProfilePictureUrl" style="object-fit: cover;" alt="@user.FullName">
                                </div>
                                <div class="col-12 col-sm-7 h-100 d-flex flex-column">
                                    <div class="mt-auto p-4">
                                        <h3>@user.FullName</h3>
                                        <h6 class="fw-normal fst-italic text-primary mb-4">@veterinarian?.Specialty</h6>
                                        <p class="m-0">@veterinarian?.Qualifications</p>
                                    </div>
                                    <div class="d-flex mt-auto border-top p-4">
                                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-twitter"></i></a>
                                        <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>Veterinarian details not found for user @user.FullName (ID: @user.Id).</p>
                    }
                }
            }
            else
            {
                <p>No veterinarians available at this time.</p>
            }
        </div>
    </div>
</div>
<!-- Team End -->